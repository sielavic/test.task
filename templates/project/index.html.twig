{% extends 'base.html.twig' %}

{% block title %}Detalle de la Tarea{% endblock %}

{% block body %}
    <div class="card" style="width: 92%; margin: auto;margin-top: 10px;background: white;">
    <div class="example-wrapper">


        <p class="text-center">{{ project.title }}</p>
        <p class="text-center">Участники проекта:</p>
        <table class="table table-striped table-sm">
            <tr>
                <th>Имя</th>
                <th>Позиция</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        {% for user in users %}
                <tr>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.position }}</td>
                    <td>{{ user.email }}</td>
                    <td class="buttons">
                        {% if not user is null  %}
                            <a href="{{ path('delete_man_project', {id:user.id, projectId: project.id}) }}" onclick="return confirm('¿Вы уверены, что хотите исключить участника?')" class="btn-delete" style="text-decoration: none;">Исключить</a>
                        {% endif %}
                    </td>
                </tr>
        {% endfor %}
    </div>
    </div>


{% endblock %}